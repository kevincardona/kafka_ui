{
  "name": "kafka-ui",
  "productName": "kafka-ui",
  "version": "0.1.0",
  "description": "A simple interface for testing Kafka consumers",
  "author": {
    "name": "Kevin Cardona",
    "email": "kevincardona1@gmail.com"
  },
  "license": "MIT",
  "repository": "github:kevincardona/kafka_ui",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "ship": "electron-builder -mwl --publish always"
  },
  "build": {
    "appId": "com.kevincardona.kafka-ui",
    "mac": {
      "category": "public.app-category.utilities",
      "target": "zip"
    },
    "win": {
      "target": "zip"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "linux": {
      "target": "zip"
    },
    "publish": [
      "github"
    ]
  },
  "keywords": [],
  "dependencies": {
    "kafka-node": "^4.1.3"
  },
  "devDependencies": {
    "electron-builder": "^21.2.0",
    "electron": "6.0.12"
  },
  "postinstall": "electron-builder install-app-deps"
}
